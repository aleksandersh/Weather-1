<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center_vertical|start"
        android:padding="8dp"
        android:textSize="18sp"
        tools:text="11.08"/>

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="30"
        app:srcCompat="@drawable/ic_clear_day"/>

    <TextView
        android:id="@+id/temp_day_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center_vertical|center"
        android:padding="8dp"
        android:textColor="@color/overview_forecast_temperature_day"
        android:textSize="18sp"
        tools:text="15"/>

    <TextView
        android:id="@+id/temp_night_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center_vertical|center"
        android:padding="8dp"
        android:textColor="@color/overview_forecast_temperature_night"
        android:textSize="18sp"
        tools:text="-2"/>
</LinearLayout>